<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_marginTop="4dp">
    <RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lnl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblMeteoriteMass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/child_layout_margin_right"
                android:layout_marginLeft="@dimen/child_layout_margin_left"
                android:text="@string/label_mass"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <TextView
                android:id="@+id/txtMeteoriteMass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/child_layout_margin_right"
                android:layout_marginLeft="@dimen/child_layout_margin_left"
                tools:text="3599"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

        </LinearLayout>

        <TextView
            android:id="@+id/txtMeteoriteName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            tools:text="Boumdeid (2011)"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/lnl"
            android:layout_toEndOf="@+id/lnl" />
    </RelativeLayout>
</android.support.v7.widget.CardView>